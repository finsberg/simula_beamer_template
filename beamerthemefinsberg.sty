\ProvidesPackage{beamerthemefinsberg}
% The Henrik Finsberg @ Simula beamer theme
\mode<presentation>

\usefonttheme[onlysmall]{structurebold}

% Add numbers in the lower right corner, but drop the default beamer
% navigation symbols
\setbeamertemplate{footline}[frame number]
\setbeamertemplate{navigation symbols}{}

% Use colors from Simula template
\definecolor{simulaorange}{RGB}{241,90,34}
\definecolor{simulagrey}{RGB}{231,230,230}

\setbeamercolor{simula}{fg=white,bg=simulaorange}
\setbeamercolor{title}{fg=simulaorange, bg=}
\setbeamercolor{frametitle}{fg=black!75!white,bg=white}
\setbeamercolor{normal text}{fg=black!85!white,bg=white}
\setbeamercolor{structure}{fg=black,bg=white}
\setbeamercolor{itemize item}{fg=simulaorange}

% Standard block

\setbeamercolor{block title}{fg = black, bg = simulaorange}
\setbeamercolor{block body}{bg = simulagrey}


% Title page
\newcommand{\finsbergtitlepage}{%
  \setbeamertemplate{background canvas}{
    \color{white} \vrule width 0.2cm height 0.98\paperheight%
    \includegraphics[width=0.2\paperwidth]{simula_logo_main_RGB.pdf}%
  }
}

% Page with Simula logo in the bottom left corner
\newcommand{\logopage}{%
  \setbeamertemplate{background canvas}{
    % we want the footer at the bottom, so we use a phantom ruler
    \color{white} \vrule width 0.1cm height 0.98\paperheight%
    \includegraphics[width=0.1\paperwidth]{simula_logo_main_RGB.pdf}%
  }
}

% No logo
\newcommand{\cleanpage}{
  \usebackgroundtemplate{}
}
